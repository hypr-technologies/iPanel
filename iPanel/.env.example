# iPanel Environment Configuration Example
# Copy this file to .env and update with your specific values

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=true
FLASK_APP=runserver.py

# Security Configuration
SECRET_KEY=your-secret-key-here
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

# Database Configuration
DATABASE_URI=sqlite:///data/ipanel.db
DATABASE_POOL_SIZE=10
DATABASE_POOL_TIMEOUT=30

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8888
SERVER_THREADS=4
SERVER_TIMEOUT=30

# Panel Configuration
PANEL_NAME=iPanel
PANEL_VERSION=8.0.0
PANEL_TITLE=iPanel v8.0.0 - Server Management Panel
PANEL_COMPANY=Hypr Technologies
PANEL_SUPPORT_EMAIL=support@hypr.tech
PANEL_SUPPORT_URL=https://hypr.tech/support

# Authentication Configuration
AUTH_SESSION_TIMEOUT=3600
AUTH_MAX_LOGIN_ATTEMPTS=5
AUTH_LOCKOUT_DURATION=300
AUTH_PASSWORD_MIN_LENGTH=8
AUTH_REQUIRE_STRONG_PASSWORD=true

# SSL Configuration
SSL_ENABLED=false
SSL_CERT_PATH=data/ssl/cert.pem
SSL_KEY_PATH=data/ssl/key.pem
SSL_CA_PATH=data/ssl/ca.pem

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/ipanel.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Cache Configuration
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300
CACHE_REDIS_URL=redis://localhost:6379/0

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@hypr.tech

# API Configuration
API_ENABLED=true
API_KEY=your-api-key-here
API_RATE_LIMIT=100
API_RATE_LIMIT_PERIOD=3600

# Development Configuration
DEBUG_MODE=true
DEBUG_TOOLBAR=true
DEBUG_PROFILER=false
TESTING=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_PATH=data/backup/
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Plugin Configuration
PLUGINS_ENABLED=true
PLUGINS_PATH=data/plugin/
PLUGINS_AUTO_INSTALL=false

# Security Headers
SECURITY_HEADERS_ENABLED=true
SECURITY_CONTENT_TYPE_NOSNIFF=true
SECURITY_FRAME_OPTIONS=SAMEORIGIN
SECURITY_XSS_PROTECTION=true
SECURITY_HSTS_ENABLED=false
SECURITY_HSTS_MAX_AGE=31536000

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_INTERVAL=60
MONITORING_RETENTION_DAYS=7

# Theme Configuration
THEME_NAME=default
THEME_DARK_MODE=false
THEME_COMPACT_MODE=false

# Timezone Configuration
TIMEZONE=UTC
DATE_FORMAT=%Y-%m-%d %H:%M:%S
LOCALE=en_US.UTF-8
